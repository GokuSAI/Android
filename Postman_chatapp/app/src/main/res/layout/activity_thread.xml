<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saikrishna.inclass09.ThreadActivity">

    <TextView
        android:id="@+id/ThreadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ThreadTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"

        app:srcCompat="@drawable/logout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ThreadTextView"
        android:layout_below="@+id/ThreadTextView"
        android:layout_marginTop="23dp"
        android:text="Current Threads"
        android:textSize="20sp"
        android:id="@+id/textView3" />

    <ListView
        android:id="@+id/Thread_list_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="17dp" />

    <EditText
        android:id="@+id/AddThreadExittext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:ems="10"
        android:hint="Add New Thread"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/AddThreadImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignTop="@+id/AddThreadExittext"
        app:srcCompat="@drawable/add" />
</RelativeLayout>
