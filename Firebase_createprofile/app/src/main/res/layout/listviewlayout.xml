<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/avatar_f_3" />

    <TextView
        android:id="@+id/CreatePhoneEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/CreateEmailEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_above="@+id/PhoneTextView"

        android:layout_marginStart="134dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/PhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="134dp"
        android:layout_alignBottom="@+id/dp"
      />

    <TextView
        android:id="@+id/DeptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/PhoneTextView"
        android:layout_alignBottom="@+id/PhoneTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />
</RelativeLayout>