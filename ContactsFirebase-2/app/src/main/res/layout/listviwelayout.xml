<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/CourseManagerdp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="22dp"
                app:srcCompat="@drawable/addphoto" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/name"
                android:layout_below="@+id/name"
                android:layout_marginTop="15dp"
                android:text="phone"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="email"
                android:layout_below="@+id/phone"
                android:layout_alignStart="@+id/phone"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="name"
                android:layout_alignTop="@+id/CourseManagerdp"
                android:layout_toEndOf="@+id/CourseManagerdp" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/CourseManagerdp"
                app:srcCompat="@mipmap/edit_profile" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/phone"
                app:srcCompat="@drawable/delete" />
        </RelativeLayout>



    </android.support.v7.widget.CardView>
</RelativeLayout>